@model IEnumerable<WebDeveloper.Model.Product>
@using WebDeveloper.Helpers
@{
    ViewBag.Title = "Product";
}

@helper DisplayPriceRazor(double price)
{
if (price == 0.0)
{
        <span>Free</span>
}
else
{
        <span>@price</span>
}
}
@helper DisplayDateOrNull(DateTime? SellEndDate)
{
if (SellEndDate == null)
{
        <span>Sin fecha</span>
}
else
{
        <span>@SellEndDate</span>
}
}

<h2>@ViewBag.Title</h2>

<ul>
    @foreach (var item in Model)
    {
        <li>
            <span>@item.ID</span>
            <span>@item.Description</span>
            @DisplayPriceRazor(item.Price)
            <div>
                @CustomHelper.DisplayPriceStatic(item.Price)
            </div>
            <div>
                @Html.DisplayPriceExtension(item.Price)
            </div>
            <span>
                Razor : @DisplayDateOrNull(item.SellEndDate)
            </span>
            <span>
                Static: @CustomHelper.DisplayDateOrNull(item.SellEndDate)
            </span>
            <span>
                Extension: @Html.DisplayDateOrNullExtension(item.SellEndDate)
            </span>
        </li>
    }
</ul>

